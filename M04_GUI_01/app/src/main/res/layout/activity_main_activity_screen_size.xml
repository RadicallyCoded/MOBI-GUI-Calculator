<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#90B8BD"
    tools:context=".MainActivityScreenSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/calcInput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:inputType="numberDecimal"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="textEnd" />

        <EditText
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:editable="false"
            android:inputType="none"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            tools:ignore="Deprecated" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonClear"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="50"
                android:layout_marginTop="25dp"
                android:text="Clear"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="3dp"
                android:backgroundTint="#F44336"/>

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="50"
                android:layout_marginTop="25dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="#F44336"
                android:text="Delete"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="3dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonSeven"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="25"
                android:layout_marginTop="10dp"
                android:text="7"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="3dp"
                android:backgroundTint="#009688"/>

            <Button
                android:id="@+id/buttonEight"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="25"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="8"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="3dp"
                android:backgroundTint="#009688"/>

            <Button
                android:id="@+id/buttonNine"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="25"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="9"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="3dp"
                android:backgroundTint="#009688"/>

            <ImageButton
                android:id="@+id/buttonDivide"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="25"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/divide_solid"
                android:backgroundTint="#E91E63"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonFour"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="25"
                android:layout_marginTop="10dp"
                android:text="4"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="3dp"
                android:backgroundTint="#009688"/>

            <Button
                android:id="@+id/buttonFive"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="25"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="5"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="3dp"
                android:backgroundTint="#009688"/>

            <Button
                android:id="@+id/buttonSix"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="25"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="6"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="3dp"
                android:backgroundTint="#009688"/>

            <ImageButton
                android:id="@+id/buttonMultiply"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="25"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/xmark_solid"
                android:backgroundTint="#E91E63"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonOne"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="25"
                android:layout_marginTop="10dp"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="3dp"
                android:backgroundTint="#009688"/>

            <Button
                android:id="@+id/buttonTwo"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="25"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="3dp"
                android:backgroundTint="#009688"/>

            <Button
                android:id="@+id/buttonThree"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="25"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="3"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="3dp"
                android:backgroundTint="#009688"/>

            <ImageButton
                android:id="@+id/buttonSubtract"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="25"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/minus_solid"
                android:backgroundTint="#E91E63"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonDecimal"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="25"
                android:layout_marginTop="10dp"
                android:text="."
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="3dp"
                android:backgroundTint="#E91E63"/>

            <Button
                android:id="@+id/buttonZero"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="25"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="3dp"
                android:backgroundTint="#009688" />

            <ImageButton
                android:id="@+id/buttonEquals"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="26"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/equals_solid"
                android:backgroundTint="#E91E63"/>

            <ImageButton
                android:id="@+id/buttonAdd"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="25"
                android:layout_marginTop="8dp"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/plus_solid"
                android:backgroundTint="#E91E63" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageRebecca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:srcCompat="@mipmap/ic_rebecca" />

        <TextView android:text="Normal Portrait Screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

    </LinearLayout>

</RelativeLayout>
